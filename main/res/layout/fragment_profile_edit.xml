<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.profile_edit">

    <!-- TODO: Update blank fragment layout -->
   <!-- <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="layout.profile_edit"/> -->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="EDIT PROFILE"
            android:textAlignment="center"
            android:textColor="?attr/actionMenuTextColor"
            android:textSize="30sp"
            android:textStyle="bold" />

    <LinearLayout
        android:layout_width="324dp"
        android:layout_height="99dp"
        android:layout_below="@id/textView2"
        android:gravity="fill"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:weightSum="1"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:id="@+id/layoutName"
            android:layout_weight="0.04">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.10"
                android:gravity="center"
                android:text="Name"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="serif"
                tools:ignore="RtlCompat" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="Full Name"
                android:inputType="textPersonName" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.12" />

        <LinearLayout
            android:id="@+id/layoutEmail"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_below="@id/layoutName"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2.29"
                android:gravity="center"
                android:text="Email"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="serif"
                tools:ignore="RtlCompat" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="wrap_content"
                android:layout_height="62dp"
                android:ems="10"
                android:hint="Email id"
                android:inputType="textEmailAddress" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.11" />

        <LinearLayout
            android:id="@+id/layoutDob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/dob"
                android:layout_width="139dp"
                android:layout_height="53dp"
                android:layout_weight="1.01"
                android:gravity="center"
                android:text="Birthday"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="serif"
                tools:ignore="RtlCompat" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Date of Birth"
                android:inputType="date"
                android:layout_weight="1.17" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:layout_weight="0.07"
            android:weightSum="1"
            android:id="@+id/layoutNationality">

            <TextView
                android:id="@+id/nationality"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Nationality"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="serif"
                tools:ignore="RtlCompat" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:entries="@array/country_arrays" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.09" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="?android:attr/colorBackgroundCacheHint"
            android:text="SAVE"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp" />


    </LinearLayout>


</RelativeLayout>

</FrameLayout>
