<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.loginandregistration.activity.Viewdoctor"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <RelativeLayout

        android:layout_width="397dp"
        android:layout_height="491dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_editor_absoluteX="5dp">


        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginTop="72dp"
            android:layout_below="@+id/textView8"
            android:layout_alignRight="@+id/linearLayout"
            android:layout_alignEnd="@+id/linearLayout">

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:layout_weight="0.05"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.06"
                    android:fontFamily="serif"
                    android:text="@string/specialty"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:typeface="normal"
                    tools:ignore="NestedWeights"
                    tools:text="Specialty"
                    tools:targetApi="jelly_bean" />

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spinner_spec"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="170dp"
                    android:layout_height="38dp"
                    android:layout_marginEnd="75dp"
                    android:layout_marginRight="75dp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:layout_weight="0.08"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:fontFamily="monospace"
                    android:text="@string/nationality"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:targetApi="jelly_bean" />

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spinner_nat"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="75dp"
                    android:layout_marginRight="75dp"
                    android:entries="@array/country_arrays"
                    tools:ignore="NestedWeights" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:layout_weight="0.11"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.03"
                    android:fontFamily="monospace"
                    android:text="Gender"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,NestedWeights"
                    tools:targetApi="jelly_bean" />

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spinner_gen"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="75dp"
                    android:layout_marginRight="75dp"
                    android:layout_weight="0.18"
                    android:entries="@array/gender" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_fil"
                android:layout_width="339dp"
                android:layout_height="wrap_content"
                android:text="@string/textview"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/button_ok"
                android:layout_width="376dp"
                android:layout_height="wrap_content"


                android:background="?attr/colorAccent"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="8sp"
                android:text="@string/apply"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:ignore="ButtonStyle"
                tools:targetApi="jelly_bean" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/button_cancel"
                android:layout_width="377dp"
                android:layout_height="50dp"


                android:background="?attr/colorAccent"
                android:fontFamily="sans-serif"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:ignore="ButtonStyle"
                tools:targetApi="jelly_bean" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/linearLayout1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/linearLayout1"
            android:fontFamily="serif"
            android:text="FILTER"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="?android:attr/textColorLinkInverse"
            android:textSize="36sp"
            android:textStyle="bold"
            android:typeface="serif"
            tools:targetApi="jelly_bean" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>